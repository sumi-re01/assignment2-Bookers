<!--success message-->
<p id="notice"><%= flash[:notice] %></p>

<!--index-->
<h1>Books</h1>
<table>
  <!--<colgroup span="3"></colgroup>-->
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to 'Show', book_path(book) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure? >>Delete #{book.title}" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--新期投稿-->
<h2>New book</h2>
<%= form_with model:@book, local: true do |f| %>
<%= render 'errors', model: f.object%>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>