<!--success message-->
<p id="notice"><%= flash[:notice] %></p>

<!--index-->
<!--要件tableタグを使用：参考↓
　　https://developer.mozilla.org/ja/docs/Web/HTML/Element/table
　　colgroupのある表-->
<h1 class="heading">Books</h1>
<table>
  <colgroup span="3"></colgroup>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <span class="button">
        <%= link_to 'Show', book_path(book) %></span>
      </td>
      <td>
        <span class="button">
        <%= link_to 'Edit', edit_book_path(book.id) %></span>
      </td>
      <td>
        <span class="button">
        <%= link_to 'Destroy', book_path(book.id), method: :delete, "data-confirm" => "Are you sure? >>Delete #{book.title}" %></span>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--新期投稿-->
<h2 class="heading">New book</h2>
<%= form_with model:@book, local: true do |f| %>
<%= render 'errors', model: f.object%>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>