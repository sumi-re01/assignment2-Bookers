<h1 class="heading">Books</h1>
<!--要件tableタグを使用：参考↓
　　https://developer.mozilla.org/ja/docs/Web/HTML/Element/table-->
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="1">
      <!--表の空白について要確認
        　https://www.w3.org/WAI/tutorials/tables/irregular/-->
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= book.title %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>
        <%= link_to 'Show', book_path(book.id) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_book_path(book.id) %>
      </td>
      <td>
        <%= link_to 'Destroy', book_path(book.id), method: :delete %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<!--新期投稿-->
<h2 class="heading">New book</h2>
<%= form_with model:@book, local: true do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit %>
  </div>
<% end %>